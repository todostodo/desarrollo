<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.desarrollo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AplicacionMovil"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="LockedOrientationActivity">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter><action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Precentacion.Login.BienbenidaActivity"
            android:screenOrientation="userPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Precentacion.Login.IniciarSesion"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Login.IntroduccionActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Login.RegistroUsuario"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Login.RecuperarPasswordActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Login.CambiarPasswordActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Perfil.PerfilAjustesActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Perfil.PerfilEditar"
            android:screenOrientation="userPortrait" />

        <activity
            android:name=".Precentacion.Alimentos.AlimentoRegistroactivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.MainActivity"
            android:screenOrientation="userPortrait" />
        <activity android:name=".Precentacion.Encuestas.registro_cuestionario_seccion4" />
        <activity android:name=".Precentacion.Encuestas.registro_cuestionario_seccion3" />
        <activity android:name=".Precentacion.Encuestas.registro_cuestionario_seccion2" />
        <activity android:name=".Precentacion.Encuestas.registro_cuestionario_seccion1" />
        <activity android:name=".Precentacion.Encuestas.registro_autoeficacia" />
        <activity android:name=".Precentacion.Encuestas.registroHijo" />
        <activity
            android:name=".Precentacion.Home.TutorFragment"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Home.HijoRegistroActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Motivadores.MotivadoresSelectActivity"
            android:screenOrientation="userPortrait" />

        <activity
            android:name=".Precentacion.Alimentos.AlimentosActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".Precentacion.Home.DetalleConsumoDia"
            android:screenOrientation="userPortrait" />
    </application>

</manifest>
