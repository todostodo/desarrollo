<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerFrutas"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight ="2.5"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/imgUrlFrutas"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="8">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Platano"
                            android:id="@+id/nombreFruta"
                            android:layout_gravity="start"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#061621"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/porcion"
                            android:layout_width="wrap_content"
                            android:text="Porcion: 1/2 Platano"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:textColor="#8F969F"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativeVitamina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="start"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/etiqueta_porciones">

                        <TextView
                            android:id="@+id/vitamina"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="3dp"
                            android:text="Vitamina C"
                            android:textColor="#30A754"
                            android:textSize="10sp" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>