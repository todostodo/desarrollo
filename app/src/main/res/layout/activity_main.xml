<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="737dp"

        android:background="@color/blanco"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="272dp"
            android:layout_height="54dp"
            android:layout_marginTop="40dp"
            android:text="@string/avisoRegistroHijos"
            android:textAlignment="center"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160.18dp"
            android:layout_height="192.93dp"
            android:layout_marginTop="14.1dp"
            android:background="@drawable/barco"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="268dp"
            android:layout_height="18dp"
            android:layout_marginTop="60dp"
            android:text="@string/preguntaRegistroHijos"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginTop="30dp"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>