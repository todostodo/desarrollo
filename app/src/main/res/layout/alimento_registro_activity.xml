    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Precentacion.Alimentos.AlimentoRegistroactivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/informationAlimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/btmCerrarSelectFrutas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:padding="10dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/flecha_regresar"
                                android:backgroundTint="#B8C2CD"
                                android:padding="10dp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/layoutRegresar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="InformaciÃ³n del alimento"
                            android:textColor="@color/negro"
                            android:textSize="24sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/btmCerrarSelectFrutas"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RelativeLayout
                            android:id="@+id/backgroundSelectFruta"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_below="@+id/layoutRegresar"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/background_valor_motivadores"
                            app:layout_constraintHeight_percent="0.64"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/layoutRegresar"
                            app:layout_constraintWidth_percent="0.4">

                            <ImageView
                                android:id="@+id/fruta_imagen"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="30dp"
                                android:src="@drawable/f_platano" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layoutRegresar"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="40dp"
                            android:layout_toEndOf="@+id/backgroundSelectFruta"
                            android:layout_toRightOf="@+id/backgroundSelectFruta"
                            android:orientation="vertical"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/backgroundSelectFruta"
                            app:layout_constraintTop_toBottomOf="@id/layoutRegresar"
                            app:layout_constraintWidth_percent="0.5">


