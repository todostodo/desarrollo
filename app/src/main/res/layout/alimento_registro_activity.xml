                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="RecomendaciÃ³n para su consumo"
                                    android:textColor="#515151"
                                    android:textSize="18sp" />

