<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_fondo_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RelativeLayout
        android:id="@+id/btnCerrarLoginRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/flecha_regresar"
            android:backgroundTint="@color/negro"
            android:padding="10dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/lblRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/registrate"
        android:textColor="@color/negro"
        android:textSize="26sp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCerrarLoginRegistro" />

    <LinearLayout
        android:id="@+id/layoutDatosRegistro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRegistrate">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">


            <EditText
                android:id="@+id/txtNombreRegistro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:background="@drawable/rectangulo_border_gris"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/ingrese_su_nombre"
                android:inputType="textCapWords"
                android:paddingLeft="30dp"
                android:textColor="@color/negro"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:background="@color/blanco"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/nombre"
                android:textColor="#A4A5AA"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="2">


        <EditText
            android:id="@+id/txtApellidoPaternoRegistro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/rectangulo_border_gris"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/ingrese_su_apellido_paterno"
            android:inputType="textCapWords"
            android:paddingLeft="30dp"
            android:textColor="@color/negro"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:background="@color/blanco"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/apellido_paterno"
            android:textColor="@color/gris_login"
            android:textSize="16sp" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2">


            <EditText
                android:id="@+id/txtApellidoMaternoRegistro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:background="@drawable/rectangulo_border_gris"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/ingrese_su_apellido_materno"
                android:inputType="textCapWords"
                android:paddingLeft="30dp"
                android:textColor="@color/negro"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:background="@color/blanco"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/apellido_materno"
                android:textColor="@color/gris_login"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2">


            <EditText
                android:id="@+id/txtCorreoRegistro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:background="@drawable/rectangulo_border_gris"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/ingrese_su_correo_electronico"
                android:inputType="textEmailAddress"
                android:paddingLeft="30dp"
                android:textColor="@color/negro"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:background="@color/blanco"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/correo"
                android:textColor="@color/gris"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:backgroundTint="#F5F4F9">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:background="@drawable/rectangulo_border_gris"
                android:paddingRight="10dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPassRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/ingrese_la_contrasena"
                    android:inputType="textPassword"
                    android:paddingLeft="30dp"
                    android:textColor="@color/negro"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:background="@color/blanco"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/contrasena"
                android:textColor="@color/gris_login"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnRegistrarUsuario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/circulo_custom_background"
        android:backgroundTint="@color/morado_login"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutDatosRegistro"
        app:layout_constraintWidth_percent="0.19">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/flecha"
            android:backgroundTint="@color/blanco"
            android:padding="12dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/btnIrLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/ya_tienes_una_cuenta_inicia_sesion"
        android:textColor="@color/negro"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarUsuario" />


</androidx.constraintlayout.widget.ConstraintLayout>