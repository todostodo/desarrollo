<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ImageView
            android:id="@+id/dotmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/epic_fichas"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fhTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Muy bien"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#6A4584"
            android:layout_gravity="center"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/fhDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/gris"
            android:text="Felicidades por el esfuerzo que realisaste por comerte la fruta o verdura del dia"/>

        <TextView
            android:id="@+id/fhFichas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="+2"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#6A4584"
            android:layout_gravity="center"
            android:textSize="36sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btmAceptarFicha"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_buttom_epic"
            android:text="Aceptar"
            android:textColor="@color/blanco"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            style="?attr/buttonBarButtonStyle"/>

    </RelativeLayout>

</LinearLayout>