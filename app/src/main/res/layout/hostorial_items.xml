<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    android:background="@color/BackgroundColorGris"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/backgroundHrFrutas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_valor_motivadores"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgUrlHrFrutas"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/f_platano" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp">


                <TextView
                    android:id="@+id/txtHRHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:textColor="#515151"
                    android:fontFamily="@font/roboto_regular"
                    android:text="6:00 AM"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtHrNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Frutas"
                        android:textColor="#515151"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txtHrConsumo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:text="Manzana, Platano, Pera, Manzana, Platano man"
                        android:textColor="#B3B3B3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtHrPorciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginRight="20dp"
                        android:text="Manzana, Platano, Pera, Manzana, Platano man"
                        android:textColor="#B3B3B3"
                        android:textSize="14sp" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>