<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/btmCerrarEpicFicha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:padding="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_salir_cruz"
            android:backgroundTint="#515151"
            android:padding="7dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgEpicFicha"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/icon_epic_ficha"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btmCerrarEpicFicha"
        app:layout_constraintWidth_percent="0.5" />

    <LinearLayout
        android:id="@+id/msjPersuasivoFicha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEpicFicha">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="En hora buena!!"
            android:textColor="@color/negro"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Has logrado consumir las porciones de frutas del dia sigue asi y lograras cambiar tu abito alimenticio"
            android:textColor="#B8C2CD"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnaAceptarFichas"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_button_verde"
        android:text="Aceptar fichas"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        android:textSize="16sp"
        app:layout_constraintHeight_percent="0.11"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msjPersuasivoFicha" />

</androidx.constraintlayout.widget.ConstraintLayout>