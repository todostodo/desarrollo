    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/cardViewValorMotivador"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:background="@drawable/background_valor_motivadores">

                    <TextView
                        android:id="@+id/txtTotalValorMotivadorSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="100"
                        android:textColor="#5D64A9"
                        android:textSize="20sp"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/imgMotivadorTerminado"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_done"
                        android:backgroundTint="#178656"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtDescripcionMotivadorSelect"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Pasear en bicicleta, patines o patineta por una hora "
                    android:textColor="#515151"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnMIniciarMotivador"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/rectangulo_verde_azul"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Iniciar"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>