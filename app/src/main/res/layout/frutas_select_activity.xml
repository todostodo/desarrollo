<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".CLIENTE.Alimentos.Frutas.frutas_select_activity"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btmCerrarSelectFrutas"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/salir"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">




            <ImageView
                android:id="@+id/fruta_imagen"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/manzana"
                android:elevation="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fruta_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manzana"
                android:layout_marginTop="10dp"
                android:textSize="36sp"
                android:layout_gravity="start"
                android:textColor="@color/negro"
                android:fontFamily="@font/roboto_bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:background="@drawable/etiquetas">

                <TextView
                    android:id="@+id/fruta_vitamina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="3dp"
                    android:text="Vitamina C"
                    android:textColor="#5C9076"
                    android:textSize="10sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/negro"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:text="Registro de consumo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btm1_4"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_bottom_background_gris"
                    android:elevation="0dp"
                    android:text="1/4"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btm1_2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_bottom_background_gris"
                    android:elevation="0dp"
                    android:text="1/2"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btm3_4"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_bottom_background_gris"
                    android:elevation="0dp"
                    android:text="3/4"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F8F8FA"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:contentPadding="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/custom_cuadro_azul"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/manzana" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Cantidad"
                                android:layout_marginBottom="-5dp"
                                android:textColor="@color/gris"
                                android:textSize="16sp" />

                            <EditText
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:padding="0dp"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/negro"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btmGuardarFruta"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:textColor="@color/blanco"
                        android:background="@drawable/custom_buttom_alimentos"
                        android:text="Agregar"
                        style="?android:attr/borderlessButtonStyle"/>

                </RelativeLayout>


            </LinearLayout>

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:paddingTop="5dip"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E1DF"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/negro"
                android:fontFamily="@font/roboto_medium"
                android:textSize="26sp"
                android:text="Detalle"/>

            <TextView
                android:id="@+id/fruta_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Beneficios"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/negro"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:text="Beneficios para la salud"/>

            <TextView
                android:id="@+id/fruta_beneficio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Beneficios"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
