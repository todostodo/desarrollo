<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/registroNino"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tituloGenero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="¿Cuál es su género?"
                    android:textColor="#515151"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/layoutGenero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tituloGenero">

                    <LinearLayout
                        android:id="@+id/btmGeneroHombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/circulo_custom_background"
                                android:backgroundTint="#E36B5E">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/icon_genero_hombre" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/checkGeneroHombre"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/circulo_verde" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_done" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Hombre"
                            android:textColor="#515151"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btmGeneroMujer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/circulo_custom_background"
                                android:backgroundTint="#B8C2CD">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/icon_genero_mujer" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/checkGeneroMujer"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/circulo_verde" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_done" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Mujer"
                            android:textColor="#515151"
                            android:textSize="16sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layourDatosGenerales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutGenero">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="¿Cuál es su nombre?"
                        android:textColor="#515151"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtHijoNombre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangulo_gris"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Nombre"
                        android:inputType="textCapWords"
                        android:paddingLeft="30dp"
                        android:textColor="#475369"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtHijoApellidoPaterno"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangulo_gris"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Apellido paterno"
                        android:inputType="textCapWords"
                        android:paddingLeft="30dp"
                        android:textColor="#475369"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtHijoApellidoMaterno"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangulo_gris"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Apellido materno"
                        android:inputType="textCapWords"
                        android:paddingLeft="30dp"
                        android:textColor="#475369"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="¿Cuál es su edad?"
                        android:textColor="#515151"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/edadTres"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:clickable="true"
                                android:text="3"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadCuatro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="4"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadCinco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="5"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadSeis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="6"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadSiete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="7"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadOcho"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="8"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadNueve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="9"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadDiez"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="10"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadOnce"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="11"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/edadDoce"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:text="12"
                                android:textColor="#DEDFE1"
                                android:textSize="40sp" />

                        </LinearLayout>

                    </HorizontalScrollView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutMedidas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/layourDatosGenerales"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Cuáles son sus medias corporales?"
                        android:textColor="#515151"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"/>

                    <EditText
                        android:id="@+id/txtHijoPeso"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangulo_gris"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Peso"
                        android:inputType="numberDecimal"
                        android:paddingLeft="30dp"
                        android:textColor="#475369"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtHijoEstatura"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangulo_gris"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Estatura"
                        android:inputType="numberDecimal"
                        android:paddingLeft="30dp"
                        android:textColor="#475369"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtHijoMedidaCintura"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangulo_gris"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Medida de cintura"
                        android:inputType="numberDecimal"
                        android:paddingLeft="30dp"
                        android:textColor="#475369"
                        android:textSize="16sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnAddNino"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rectangulo_verde_azul"
                    android:text="Siguiente"
                    android:textColor="@color/blanco"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutMedidas"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/preferenciasNino"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPreferencias1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Preferencias"
                    android:textColor="#2C344C"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/txtAvisoPreferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Seleccione la fruta que mas le gusta asu hijo"
                    android:textAlignment="center"
                    android:textColor="@color/gris"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center|end"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegistrarPreferenciasFrutas"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rectangulo_azul_bajo"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnRegistrarPreferenciasVerduras"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rectangulo_azul_bajo"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/myRecyclerViewPreferenciasFrutas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    tools:listitem="@layout/preferencias_items" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/myRecyclerViewPreferenciasVerduras"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    tools:listitem="@layout/preferencias_items" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>


